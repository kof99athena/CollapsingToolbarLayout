<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ex40CollapsingToolbarLayout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


<!--    앱바레이아웃만의 Styletheme를 만들어보자-->
    <style name="appbar">

        <!--        툴바의 제목 색상을 지정해보자, 툴바만 있을때 -->
        <item name="titleTextColor">@color/white</item>

        <!--        앱바레이아웃안에 툴바를 넣었을때 제목색상 지정하는방법은 약간 다르다. -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>


<!--        옵션 메뉴 아이템의 글씨 색상까지 영향-->
        <item name="android:textColor">@color/black</item>

    </style>



</resources>